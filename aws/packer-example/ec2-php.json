{
  "variables": {
    "aws_access_key": null,
    "aws_secret_key": null,
    "aws_region": null,
    "aws_base_ami": null
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `aws_base_ami`}}",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "php-web-1-{{timestamp}}"
    }
  ],

  "provisioners" : [
   {
     "type": "file",
     "source": "setup-packer-php.sh",
     "destination": "/tmp/setup.sh"
   },{
     "type": "shell",
     "execute_command": "sh '{{ .Path }}' && rm -rf /tmp/setup.sh",
     "inline": [
        "bash /tmp/setup.sh"
     ]
   }
   ]
}
